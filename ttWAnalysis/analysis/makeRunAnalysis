CC=g++ -Wall -Wextra -O3
CFLAGS= -Wl,--no-as-needed,-lTMVA
LDFLAGS=`root-config --glibs --cflags`
SOURCES= runanalysis.cc src/systematicTools.cc ../eventselection/src/eventSelections.cc ../eventselection/src/eventFlattening.cc ../btagging/src/bTaggingTools.cc ../../codeLibrary.o 
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=runanalysis

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
        
clean:
	rm -rf *o $(EXECUTABLE)
