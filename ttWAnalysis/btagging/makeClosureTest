CC=g++ -Wall -Wextra -O3
CFLAGS= -Wl,--no-as-needed,-lTMVA
LDFLAGS=`root-config --glibs --cflags`
SOURCES= closureTest.cc src/bTaggingTools.cc ../eventselection/src/eventSelections.cc ../../codeLibrary.o 
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=closureTest

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
        
clean:
	rm -rf *o $(EXECUTABLE)
